<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="兑换"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/et_phone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:layout_below="@id/toob"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/et_rellphone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="确认手机号"
        android:layout_below="@id/et_phone"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_yu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账户余额为："
        android:textSize="30sp"
        android:layout_below="@id/et_rellphone"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_duihuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择兑换内容"
        android:layout_below="@id/tv_yu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_shouxu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_yu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcy_main2"
        android:layout_below="@id/tv_duihuan"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_daozhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcy_main2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="充值话费一般在24小时内到账，到账后立即生效。"
        />

    <Button
        android:id="@+id/bt_quxiao"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:layout_below="@id/tv_daozhang"
        android:layout_marginTop="30dp"
        android:background="#EF5B5B"
        />

    <Button
        android:id="@+id/bt_queren"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_daozhang"
        android:text="确认兑换"
        android:layout_alignParentRight="true"
        android:background="#41AA45"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>